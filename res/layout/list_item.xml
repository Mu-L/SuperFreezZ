<LinearLayout

	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/card_view"
	style="@style/myClickable"
	xmlns:android="http://schemas.android.com/apk/res/android"

	android:orientation="vertical"
	android:gravity="center"
	android:layout_width="match_parent"
	android:minHeight="?android:attr/listPreferredItemHeight"
	android:layout_height="wrap_content"
	android:paddingLeft="6dp"
	android:paddingRight="6dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="false"
		android:focusable="false"
		android:minHeight="?android:attr/listPreferredItemHeight"
		android:orientation="horizontal">

		<!--android:layout_width="?android:attr/listPreferredItemHeight"-->
		<ImageView
			android:id="@+id/imgIcon"
			android:layout_width="50dip"
			android:layout_height="50dp"
			android:adjustViewBounds="true"
			android:layout_gravity="center"
			android:scaleType="fitCenter" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="horizontal">


			<TextView
				android:id="@+id/txtAppName"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:gravity="center_vertical|center_horizontal"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<ImageView
				android:id="@+id/imageFreezeWhenInactive"
				android:layout_width="40dp"
				android:layout_height="match_parent"
				android:layout_gravity="end|center_vertical"
				android:padding="5dp"
				app:srcCompat="@drawable/symbol_freeze_when_inactive"
				android:tag="FREEZE_MODE"
				style="@style/myClickable"/>

			<ImageView
				android:id="@+id/imageAlwaysFreeze"
				android:layout_width="40dp"
				android:layout_height="match_parent"
				android:layout_gravity="end|center_vertical"
				android:padding="5dp"
				app:srcCompat="@drawable/symbol_always_freeze"
				android:tag="FREEZE_MODE"
				style="@style/myClickable"/>

			<ImageView
				android:id="@+id/imageNeverFreeze"
				android:layout_width="40dp"
				android:layout_height="match_parent"
				android:layout_gravity="end|center_vertical"
				android:padding="5dp"
				app:srcCompat="@drawable/symbol_never_freeze"
				android:tag="FREEZE_MODE"
				style="@style/myClickable"/>


		</LinearLayout>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="?attr/dividerVertical" />

</LinearLayout>
